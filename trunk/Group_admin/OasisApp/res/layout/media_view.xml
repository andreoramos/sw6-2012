<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:stretchColumns="*" >

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal" >

        <TextView
            android:id="@+id/tvMediaName"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/columnMediaName"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/tvMediaPath"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/columnMediaPath"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/tvMediaPublic"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/columnMediaPublic"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/tvMediaType"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/columnMediaType"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/tvMediaOwner"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/columnMediaOwner"
            android:textAppearance="@android:style/TextAppearance.Large"
            android:textSize="32dp" />
    </TableRow>

    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:layout_span="5"
            android:orientation="vertical" >

            <ListView
                android:id="@android:id/list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:scrollbars="none" />

            <TextView
                android:id="@+id/android:empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dip"
                android:text="@string/emptyList"
                android:textSize="28dp" />
        </LinearLayout>
    </TableRow>

</TableLayout>