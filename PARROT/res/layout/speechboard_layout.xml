<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/SpeechBoard"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:keepScreenOn="true">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1000dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal" >

        <!-- Screen Design for Photos -->

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="fill_parent"
            android:background="@drawable/catlayout"
            android:orientation="vertical" >

            <!-- COPY FROM HERE -->

            <GridView
                android:id="@+id/supercategory"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:columnWidth="90dp"
                android:gravity="right"
                android:horizontalSpacing="5dp"
                android:numColumns="1"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />

            <!-- STOP COPYING -->

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="10dp"
            android:background="@drawable/gridviewlayout"
            android:orientation="vertical" >

            <GridView
                android:id="@+id/pictogramgrid"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:columnWidth="150dp"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:scrollbars="vertical"
                android:scrollbarSize="50dp"
                android:fadeScrollbars="false" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/sentenceboardlayout" 
        android:id ="@+id/sentenceboardlinearhelper">
              <GridView
                android:id="@+id/sentenceboard"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:columnWidth="90dp"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                android:verticalSpacing="5dp" />
    </LinearLayout>


</LinearLayout>