<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient 
    		android:startColor="#FFFFD96E"
    		android:endColor="#FFDD9639"
    		android:angle="-90"
    		/>
            <stroke android:width="3px" android:color="#FFDD9639" 
            />
            <corners android:radius="10dp" 
            />
            <padding
			android:left="10dp"
			android:top="10dp"
			android:right="10dp"
			android:bottom="10dp"
     	   />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient 
    		android:startColor="#FFFFD96E"
    		android:endColor="#FFFFBB55"
    		android:angle="-90"
    		/>
            <stroke android:width="3px" android:color="#FFDD9639" 
            />
            <corners android:radius="10dp" 
            />
            <padding
			android:left="10dp"
			android:top="10dp"
			android:right="10dp"
			android:bottom="10dp"
     	   />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient 
    		android:startColor="#FFFFD96E"
    		android:endColor="#FFFFBB55"
    		android:angle="-90"
    		/>
            <stroke android:width="3px" android:color="#FFDD9639" 
            />
            <corners android:radius="10dp" 
            />
            <padding
			android:left="10dp"
			android:top="10dp"
			android:right="10dp"
			android:bottom="10dp"
     	   />
        </shape>
    </item>
</selector>